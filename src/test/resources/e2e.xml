<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite verbose="1" configfailurepolicy="continue" thread-count="1" parallel="tests" name="e2e">
    <parameter name="selenium" value="http://selenium-hub:4444"/>
    <parameter name="url" value="https://e2e.jetbrains.space"/>
    <parameter name="browser" value="CHROME"/>
    <parameter name="headless" value="true"/>
    <test parallel="classes" name="google" thread-count="1">
        <packages>
            <package name="e2e.test.google.*"/>
        </packages>
    </test>
    <test parallel="classes" name="main functionality" thread-count="1">
        <packages>
            <package name="e2e.test.space.*"/>
        </packages>
    </test>
</suite>